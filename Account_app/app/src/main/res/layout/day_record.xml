<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7C7FF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7C7FF"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_budget"
            android:text="X"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text="2019年12月1日"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_day_record"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/image_day_record" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="類別"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="價格"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="備註"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="386dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorGreyDark" />

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:background="#FFFBFB">

        <LinearLayout
            android:id="@+id/records_layout"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="當日收入："
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/inMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 元"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayexpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="當日支出："
                android:textColor="#E91E63"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/exMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 元"
                android:textColor="#E91E63"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>